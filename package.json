{
  "name": "aetherlore-studio",
  "private": true,
  "version": "1.0.0",
  "description": "A powerful, portable lorebook manager and editor.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:wait\"",
    "electron:wait": "wait-on tcp:5173 && electron .",
    "electron:build": "npm run build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.aetherlore.studio",
    "productName": "AetherLore Studio",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    }
  },
  "dependencies": {
    "@google/genai": "^0.1.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}